<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anay.stockmaintenance">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddItem" />
        <activity
            android:name=".NewBill"
            android:label="@string/title_activity_new_bill"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".OldBill" />
        <activity android:name=".UpdateStock" />
        <activity android:name=".CheckQuantity" />
        <activity android:name=".Bill" />
        <activity android:name=".StockBuy"></activity>
    </application>

</manifest>